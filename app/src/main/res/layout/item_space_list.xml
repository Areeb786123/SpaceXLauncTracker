<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen130"
    android:layout_marginHorizontal="@dimen/dimen10"
    android:layout_marginTop="@dimen/dimen10"
    android:alpha="10"
    android:padding="@dimen/dimen10"
    app:cardCornerRadius="@dimen/dimen12"
    tools:cardBackgroundColor="#D6C6F3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_mission_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10"
            android:fontFamily="@font/atomic_age"
            android:textColor="@color/blue"
            android:textSize="@dimen/text12"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_mission_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="july 04 , 2023" />

        <TextView
            android:id="@+id/tv_mission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen10"
            android:fontFamily="@font/alfa_slab_one"
            android:textColor="@color/black"
            android:textSize="@dimen/text16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mission Mangal" />

        <TextView
            android:id="@+id/tv_rocket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10"
            android:fontFamily="@font/bowlby_one"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mission_name"
            tools:text="Areeb x " />

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen10"
            android:src="@drawable/ic_save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red" />

        <ImageView
            android:id="@+id/img_rocket"
            android:layout_width="@dimen/dimen150"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen10"
            android:src="@drawable/ic_rocket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>